<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/custom_edit_text</item>
        <item name="android:textColorHint">#999999</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/custom_edit_text</item>
        <item name="android:textColorHint">#999999</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
